<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="590dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/settings"
        android:backgroundTint="@color/white"
        app:fabSize="normal"
        app:maxImageSize="40dp"
        />

    <ImageButton
        android:id="@+id/addGoodBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="18dp"
        android:onClick="addGoodClicked"

        app:srcCompat="@drawable/btn_add_good_image"

        tools:ignore="VectorDrawableCompat" />


    <ImageButton
        android:id="@+id/moneyPigBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"

        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="moneyPigBtnClicked"

        app:srcCompat="@drawable/buttonmoneypig"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/chartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"

        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="330dp"
        android:onClick="chartBtnClicked"

        app:srcCompat="@drawable/chart_btn_image"
        tools:ignore="VectorDrawableCompat" />



</RelativeLayout>