<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivityNoAcc2"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextSecond"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:background="@drawable/body_for_btn_radius_13_dp_sign_in"
        android:onClick="nextLog2"
        android:text="@string/string_next_for_btn"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/body_for_edit_text"
        android:hint="@string/string_login"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/txtPasswd"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:hint="@string/string_passwd"
        android:background="@drawable/body_for_edit_text"/>

    <EditText
        android:id="@+id/txtRepeatPasswd"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:inputType="textPassword"
        android:hint="@string/string_repeat_passwd"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:background="@drawable/body_for_edit_text"/>

</RelativeLayout>